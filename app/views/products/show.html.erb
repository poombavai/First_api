<body bgcolor="pink"><center>
<%= link_to "Back", products_path %><br> 
<h2><%= link_to "Add new Product", new_product_path %></h2>
<table border ="3" bgcolor="Teal">
<font face ="Lucida Calligraphy" color="violet">
<th>BRAND_NAME</th>
<th>DETAILS</th>
<th>PRICE</th>
<tr>
<td><%= @product.b_name%></td>
<td><%= @product.details%></td>
<td><%= @product.price%></td>
<td><%= link_to "edit", edit_product_path(@product)%></td>
<td><%= link_to "delete", @product, :method=>"delete", :data => {:confirm=>"Are you sure!"}%></td>
<tr>
<% if not @product.images.blank? %>
<% @product.images.each do |img|%>
<td><%= image_tag img.photo %></td></tr>
<%end%>
<%end%>
</tr>
</font>
</table></center>
</body>
