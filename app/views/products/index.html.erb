<body bgcolor="pink"><center>
<h2><%= link_to "Add new Product", new_product_path %></h2>
<br><br>
<table border = "2" bgcolor = "Teal">
<font face ="Monotype Corsiva" color="Aqua">
<th>IMAGE</th>
<th>BRAND_NAME</th>
<th>DETAILS</th>
<th>PRICE</th>
<% @product.each do |i| %>
<tr>
<td><%= %></td>
<td><%= i.b_name%></td>
<td><%= i.details%></td>
<td><%= i.price%></td>
<td><%= link_to "show", product_path(i)%></td>
<td><%= link_to "edit", edit_product_path(i)%></td>
<td><%= link_to "delete", i, :method=>"delete", :data => {:confirm=>"Are you sure!"}%></td>
</tr>
<tr>
<% if not i.images.blank? %>
<% i.images.each do |img|%>
<td><%= image_tag img.photo %></td></tr>
<%end%>
<%end%>
<%end%>
</font>
</table></center>
</body>
